---
interface Props {
  href: string
}

const { href } = Astro.props
---

<a
  href={href}
  target="_blank"
  rel="noreferrer"
  aria-label="Link social"
  title="Contacta conmigo"
  class="flex items-center gap-1 px-5 py-2 font-medium transition-transform bg-sky-400/15 rounded-xl w-fit hover:bg-sky-400 hover:scale-105"
>
  <slot />
</a>

<style>
  a:hover {
    box-shadow: 0 0 25px theme(colors.sky.400/0.5);
  }
</style>
